<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Crud Node Js!</title>
  </head>
  <body>
    <h1 class="mt-3 ml-5">Crud Menggunakan Node Js</h1>
    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary mt-2 mb-2 ml-5" data-toggle="modal" data-target="#exampleModal">
  Tambah Data
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Masukkan Data</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/save" method="POST">
          <div class="form-group">
            <label>ID : </label>
            <input type="text" class="form-control" name="id">
          </div>

          <div class="form-group">
            <label>nama produk : </label>
            <input type="text" class="form-control" name="nama">
          </div>

          <div class="form-group">
            <label>jumlah produk : </label>
            <input type="text" class="form-control" name="jumlah">
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
        </form>
      </div>
    </div>
  </div>
</div>
      <div class="container">
        <div class="row">
          <div class="table-responsive">
            <table class="table table-dark mt-3">
              <tr>
                <th>ID</th>
                <th>Nama Produk</th>
                <th>Jumlah Produk</th>
                <th>Aksi</th>
              </tr>
              {{#each results}}
              <tr>
                <td>{{ id }}</td>
                <td>{{ nama }}</td>
                <td>{{ jumlah }}</td>
                <td>
                  <!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#hapus{{ id }}">
  hapus
</button>

<!-- Modal -->
<div class="modal fade" id="hapus{{ id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="color: black;" id="exampleModalLabel">Yakin Ingin Menghapus Data Ini?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="color: black;">
        <form action="/delete" method="POST">

          <p>ID : <b>{{ id }}</b></p><br>
          <p>Nama Produk : <b>{{ nama }}</b></p><br>
          <p>Jumlah Produk : <b>{{ jumlah }}</b></p>

          <input type="text" value="{{ id }}" name="id" hidden="">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-danger">Hapus Data</button>
        </form>
      </div>
    </div>
  </div>
</div>

 <!-- Button trigger modal -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#edit{{ id }}">
  Edit
</button>

<!-- Modal -->
<div class="modal fade" id="edit{{ id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="color: black;" id="exampleModalLabel">EDIT '{{ nama }}'</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="color: black;">
        <form action="/update" method="POST">

          <div class="form-group">
            <label>nama produk : </label>
            <input type="text" class="form-control" value="{{ nama }}" name="nama">
          </div>

          <div class="form-group">
            <label>jumlah produk : </label>
            <input type="text" class="form-control" value="{{ jumlah }}" name="jumlah">
          </div>
          

          <input type="text" value="{{ id }}" name="id" hidden="">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Ubah Data</button>
        </form>
      </div>
    </div>
  </div>
</div>
